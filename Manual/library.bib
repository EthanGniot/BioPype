doi = {10.1038/nature07540},
file = {:Users/ethangniot/Library/Application Support/Mendeley Desktop/Downloaded/Turnbaugh et al. - 2009 - A core gut microbiome in obese and lean twins.pdf:pdf},
issn = {1476-4687},
journal = {Nature},
month = {jan},
number = {7228},
pages = {480--4},
pmid = {19043404},
publisher = {NIH Public Access},
title = {{A core gut microbiome in obese and lean twins.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2677729},
volume = {457},
year = {2009}
}
